{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@react-three/drei": ["./drei/src"]
    },
    "typeRoots": [
      "./types",
      "./node_modules/@types",
      "./node_modules/@react-three/drei/dist"
    ],
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "src",
    "**/*.tsx",
    "types",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*",
    "global.d.ts",
    "./drei/src"
  ],
  "exclude": ["node_modules", "**/*.stories.tsx"]
}
